<%- include('../layouts/f_header') %>
    <%- include('../layouts/f_menu_general') %>

        <!--CONTENT-->
        <div class="carousel slide">
            <div class="carousel-inner">
                <% if(Object.keys(header_images).length !==0 ){let no=1; header_images.forEach(hi =>{%>
                    <div class="carousel-item <%- no==1 ? 'active':''%>">
                        <img src="/metroland/assets/img/<%-hi.image%>" class="d-block w-100" alt="...">
                    </div>
                <%no++ })}%>
            </div>
        </div>

        <div class="container-fluid px-1" id="karir">
            <div class="container-fluid">
                <h1 class="text-center pt-5">Karir</h1>
                <div class="row pt-5 pb-5">
                    <% rows.forEach(element=> { %>
                        <div class="col-md-4">
                            <div class="card d-flex pt-2">
                                <img src="/metroland/assets/img/karir.png" class="card-img-top">

                                <div class="card-body">
                                    <h5 class="card-title text-uppercase">
                                        <%= element.department_name %>
                                    </h5>
                                    <% if(element.banner_image !=null){%>
                                        <a class="pop btn" data-banner_image="<%= element.banner_image %>">
                                            <p class="card-text">Job Detail <img
                                                    src="/metroland/assets/img/arrow-right.svg">
                                            </p>
                                        </a>
                                        <%} %>
                                            <%- element.description %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
            <%- include('modal') %>
        </div>


        <%- include('../layouts/f_footer') %>
            <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
            <script src="/metroland/assets/js/front_end/carrier/index.js"></script>
            <%- include('../layouts/f_end') %>