<%- include('../layouts/f_header') %>
    <%- include('../layouts/f_menu_general') %>

        <!--CONTENT-->
        <div class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/metroland/assets/img/Aglonema.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
        <!-- isi berita -->
        <div class="container-fluid">
            <div class="container">
                <div class="new-title text-center my-5">
                    <h1>
                        <%= news.title%>
                    </h1>
                    <p>
                        <%= moment(news.updated_at).format( 'DD-MMMM-YYYY HH:mm' ) %>
                    </p>
                </div>
                <div class="new-content">
                    <div class="col-12 col-md-12">
                        <%- news.description %>
                    </div>

                </div>
            </div>
        </div>
        <!-- berita selanjutnya -->
        <div class="container-fluid bg-opacity-100 p-0 next-news">
            <img src="/metroland/assets/img/news.png" class="img-fluid ">
            <% if(next !=null){%>
                <div class="title">
                    <a href="/berita/<%= next.id%>/detail">Berita Selanjutnya</a>
                    <img src="/metroland/assets/img/arrow-right.svg">
                    <br><br>
                    <a href="">
                        <h3>
                            <%= next.title %>
                        </h3>
                    </a>
                </div>
                <% } %>
        </div>

        <%- include('../layouts/f_footer') %>
            <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
            <script src="/metroland/assets/js/front_end/news/index.js"></script>
            <%- include('../layouts/f_end') %>