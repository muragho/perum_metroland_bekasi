<%- include('../layouts/f_header') %>
    <%- include('../layouts/f_menu_beranda') %>

        <div id="carouselExampleIndicators" class="carousel carousel-dark slide" data-bs-ride="carousel"
            data-bs-pause="hover">
            <div class="carousel-indicators" id="first_prd">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="2000">
                    <img src="/metroland/assets/img/Aglonema.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="/metroland/assets/img/Torino.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="/metroland/assets/img/Untitled-1.jpg" class="d-block w-100" alt="...">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- produk -->
        <div class="container-fluid py-2" id="produk">
            <div class="container-fluid px-3">
                <% let number=1; for(i=0;i<products.length;i++){ const title=products[i].title.split(" ");const totWord = title.length;
                    if(number % 2 === 0){%>
                    <div class=" card mx-auto mx-5 my-5 shadow-lg bg-body-tertiary rounded"
                    id="<%= products[i].title.replaceAll(' ',' _')%>">

                    <a href="/produk/<%= products[i].id %>">

                        <div class="row g-0 d-flex align-items-center" style="overflow-x: hidden">
                            <div class="col-md-6 nomor-2">
                                <div class="card-body text-end">
                                    <h1 class="card-title-product text-uppercase">
                                        <%= products[i].title.replace(title[totWord-1].trim() , '' )%>
                                            <% if(totWord> 1){%>
                                                <span
                                                    style="color: #9B927F; text-decoration: underline; text-underline-offset: 10px; text-decoration-thickness: 4px ;">
                                                    <%= title[totWord-1].trim()%>
                                                </span>
                                                <%}%>
                                    </h1>
                                    <p class="card-text text-start fs-6 text-wrap">
                                        <%= JSDOM.fragment(products[i].content).textContent%>
                                    </p>

                                    <% if(i < (products.length -1)){ %>
                                        <div id="<%= products[i + 1].title.replaceAll(' ',' _') %>_header"></div>
                                        <%}else{%>
                                            <div id="<%= products[i].title.replaceAll(' ',' _') %>_header"></div>
                                            <%} %>

                                                Selengkapnya <img src="/metroland/assets/img/arrow.png">
                                </div>
                            </div>
                            <div class="col-md-6 h-100 nomor-1" style="max-height: 50%;">
                                <img src="/metroland/assets/img_product/<%= products[i].image_banner_1%>"
                                    class="img-fluid float-end rounded" alt="...">
                            </div>
                        </div>
                    </a>



            </div>
            <%}else{%>
                <div class="card mx-auto mx-5 my-5 shadow-lg bg-body-tertiary rounded"
                    id="<%= products[i].title.replaceAll(' ',' _')%>">
                    <a href="/produk/<%= products[i].id %>">

                        <div class="row g-0 d-flex align-items-center" style="overflow-x: hidden">
                            <div class="col-md-6 h-100">
                                <img src="/metroland/assets/img_product/<%= products[i].image_banner_1%>"
                                    class="img-fluid float-start rounded" alt="...">
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <h1 class="card-title-product text-uppercase">
                                        <%= products[i].title.replace(title[totWord-1], '' )%>
                                            <% if(totWord> 1){%>
                                                <span
                                                    style="color: #9B927F; text-decoration: underline; text-underline-offset: 10px; text-decoration-thickness: 4px;">
                                                    <%= title[totWord-1]%>
                                                </span>
                                                <%}%>
                                    </h1>
                                    <p class="card-text fs-6 text-wrap">
                                        <%= JSDOM.fragment(products[i].content).textContent%>
                                    </p>

                                    <% if(i < (products.length -1)){ %>
                                        <div id="<%= products[i + 1].title.replaceAll(' ',' _') %>_header"></div>
                                        <%}else{%>
                                            <div id="<%= products[i].title.replaceAll(' ',' _') %>_header"></div>
                                            <%} %>

                                                Selengkapnya <img src="/metroland/assets/img/arrow.png">
                                </div>
                            </div>
                        </div>
                    </a>

                </div>
                <%}number++};%>

                    <div class="text-center">
                        <button class="btn-primary">
                            <a href="/produk">Lihat Semua Produk</a>
                        </button>
                    </div>
        </div>

        </div>

        <!-- brand value -->
        <div class="container-fluid bg-white my-5 py-5" id="brand-value">
            <div class="container-fluid text-center py-md-5">
                <h1>Kenapa harus memilih perumahan Metroland?</h1>
                <div class="row pt-5 px-1">
                    <div class="col-md-3 col-sm-6">
                        <div class="symbol symbol-50px symbol-circle">
                            <img class="symbol-label" src="/metroland/assets/img/akses.png">
                        </div>
                        <h2>Akses & Transportasi Mudah</h2>

                    </div>

                    <div class="col-md-3 col-sm-6">
                        <div class="symbol symbol-50px symbol-circle"><img src="/metroland/assets/img/lokasi.png"
                                class="symbol-label"></div>
                        <h2>Lokasi Strategis</h2>

                    </div>

                    <div class="col-md-3 col-sm-6">
                        <div class="symbol symbol-50px symbol-circle"><img src="/metroland/assets/img/investasi.png"
                                class="symbol-label"></div>
                        <h2>Investasi Tepat</h2>

                    </div>

                    <div class="col-md-3 col-sm-6">
                        <div class="symbol symbol-50px symbol-circle"><img src="/metroland/assets/img/harga.png"
                                class="symbol-label"></div>
                        <h2>Harga terjangkau</h2>

                    </div>
                </div>
            </div>

        </div>

        <!-- simulasi kpr -->
